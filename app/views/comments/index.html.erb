<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %> </td>
        <td><%= comment.author %> </td>
        <td><%= link_to 'Show', [@course, comment] %></td>
        <td><%= link_to 'Edit', edit_course_comment_path(@course, comment) %></td>
        <td><%= link_to 'Destroy', [@course, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_comment_path(@course) %>
